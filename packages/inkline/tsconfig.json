{
    "extends": "../tooling/typescript-config/tsconfig.json",
    "compilerOptions": {
        "rootDir": "src",
        "outDir": "lib",
        "baseUrl": ".",
        "types": [
            "@testing-library/jest-dom",
            "vitest/globals"
        ],
        "paths": {
            "@inkline/inkline/*": ["./src/*"],
            "@inkline/inkline": ["./src/inkline"]
        }
    },
    "include": [
        "src/**/*.vue",
        "src/**/*.ts",
        "src/**/*.d.ts",
        "src/**/*.tsx"
    ],
    "references": [
        {
            "path": "./tsconfig.node.json"
        }
    ],
    "tsc-alias": {
        "fileExtensions": {
            "inputGlob": "{mjs,cjs,js,jsx,vue,d.{mts,cts,ts,tsx}}"
        }
    }
}
