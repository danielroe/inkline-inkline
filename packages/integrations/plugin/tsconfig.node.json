{
    "extends": "../../tooling/typescript-config/tsconfig.json",
    "compilerOptions": {
        "composite": true,
        "module": "esnext",
        "moduleResolution": "node",
        "types": [
            "vitest/globals"
        ]
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.d.ts",
        "src/**/*.tsx"
    ],
    "exclude": [
        "src/nuxt.ts",
        "src/vite.ts",
        "playground/*",
        "nuxt.config.ts",
        "vite.config.ts"
    ]
}
