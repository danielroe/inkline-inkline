{
    "compilerOptions": {
        "composite": true,
        "target": "esnext",
        "useDefineForClassFields": true,
        "module": "esnext",
        "moduleResolution": "node",
        "strict": true,
        "jsx": "preserve",
        "sourceMap": true,
        "allowJs": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "lib": ["esnext", "dom"],
        "baseUrl": ".",
        "rootDir": "src",
        "outDir": "lib"
    },
    "include": [
        "./src/**/*.ts",
        "./src/**/*.tsx"
    ],
    "references": [
        {
            "path": "./tsconfig.vite.json"
        }
    ]
}
